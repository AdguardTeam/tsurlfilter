{
    "compilerOptions": {
        "moduleResolution": "bundler",
        "target": "es2022",
        "module": "es2022",
        "lib": [
            "esnext",
            "dom"
        ],
        "strict": true,
        "allowJs": true,
        "resolveJsonModule": true,
        "esModuleInterop": true, // This will set allowSyntheticDefaultImports to true
        "skipLibCheck": true,
        "typeRoots": [
            "./types",
            "node_modules/@types",
            "node_modules/chrome-types"
        ]
    }
}
