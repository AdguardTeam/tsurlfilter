{
  "name": "@adguard/tswebextension",
  "version": "0.4.0",
  "description": "This is a TypeScript library that implements AdGuard's extension API",
  "main": "dist/index.js",
  "typings": "dist/types/lib/mv2/background/index.d.ts",
  "exports": {
    ".": "./dist/index.js",
    "./mv3": "./dist/index.mv3.js",
    "./mv3/utils": "./dist/mv3-utils.js",
    "./mv3/content-script": "./dist/content-script.mv3.js",
    "./content-script": "./dist/content-script.js",
    "./content-script/css-hits-counter": "./dist/css-hits-counter.js",
    "./cli": "./dist/cli.js",
    "./assistant-inject": "./dist/assistant-inject.js"
  },
  "typesVersions": {
    "*": {
      "mv3": [
        "dist/types/lib/mv3/background/index.d.ts"
      ],
      "mv3/utils": [
        "dist/types/lib/mv3/utils/get-filter-name.d.ts"
      ],
      "mv3/content-script": [
        "dist/types/lib/mv3/content-script/index.d.ts"
      ],
      "content-script": [
        "dist/types/lib/mv2/content-script/index.d.ts"
      ],
      "content-script/css-hits-counter": [
        "dist/types/lib/mv2/content-script/css-hits-counter.d.ts"
      ],
      "cli": [
        "dist/types/cli/index.d.ts"
      ],
      "assistant-inject": [
        "dist/types/lib/mv2/content-script/assistant-inject.d.ts"
      ]
    }
  },
  "bin": {
    "tswebextension": "dist/cli.js"
  },
  "files": [
    "dist",
    "src"
  ],
  "author": "AdGuard",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AdguardTeam/tsurlfilter.git",
    "directory": "packages/tswebextension"
  },
  "license": "GPL-3.0-only",
  "engines": {
    "node": ">=6.0.0"
  },
  "bugs": {
    "url": "https://github.com/AdguardTeam/tsurlfilter/issues"
  },
  "homepage": "https://github.com/AdguardTeam/tsurlfilter/tree/master/packages/tswebextension#readme",
  "scripts": {
    "lint": "eslint .",
    "prebuild": "rimraf dist",
    "build": "yarn build:types && rollup -c rollup.config.ts --configPlugin @rollup/plugin-swc",
    "postbuild": "node tasks/build-txt",
    "build:types": "tsc --project tsconfig.build.json --declaration --emitDeclarationOnly --outdir dist/types",
    "start": "rollup -c rollup.config.ts -w",
    "test": "jest --coverage",
    "test:smoke": "cd test/builders/rollup-ts && yarn test",
    "test:prod": "yarn lint && yarn test:smoke && yarn test --no-cache --runInBand",
    "report-coverage": "cat ./coverage/lcov.info | coveralls",
    "precommit": "lint-staged",
    "prepublishOnly": "yarn build",
    "increment": "yarn version --patch --no-git-tag-version"
  },
  "lint-staged": {
    "{src,test}/**/*.ts": [
      "eslint"
    ]
  },
  "dependencies": {
    "@adguard/assistant": "^4.3.70",
    "@adguard/extended-css": "^2.0.52",
    "@adguard/scriptlets": "^1.9.72",
    "@adguard/tsurlfilter": "^2.1.12",
    "bowser": "2.11.0",
    "commander": "11.0.0",
    "fs-extra": "11.1.1",
    "lru_map": "0.4.1",
    "nanoid": "4.0.2",
    "text-encoding": "git+https://github.com/AdguardTeam/text-encoding.git#v0.7.2",
    "tldts": "^6.0.8",
    "tslib": "2.5.3",
    "webextension-polyfill": "0.10.0",
    "zod": "3.21.4"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "25.0.2",
    "@rollup/plugin-node-resolve": "15.1.0",
    "@rollup/plugin-swc": "^0.1.1",
    "@rollup/plugin-typescript": "^11.1.1",
    "@swc/core": "1.3.75",
    "@swc/jest": "0.2.29",
    "@types/chrome": "^0.0.237",
    "@types/fs-extra": "^11.0.1",
    "@types/jest": "29.5.2",
    "@types/sinon-chrome": "2.2.11",
    "@types/webextension-polyfill": "0.10.0",
    "@typescript-eslint/eslint-plugin": "5.59.11",
    "@typescript-eslint/parser": "5.59.11",
    "coveralls": "3.1.1",
    "eslint": "8.43.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-airbnb-typescript": "17.0.0",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-import-newlines": "1.3.1",
    "eslint-plugin-jsdoc": "^46.8.2",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "lint-staged": "13.2.2",
    "rimraf": "5.0.1",
    "rollup": "^3.25.1",
    "rollup-plugin-cleanup": "3.2.1",
    "rollup-plugin-preserve-shebangs": "0.2.0",
    "sinon-chrome": "^3.0.1",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "5.1.3"
  }
}
