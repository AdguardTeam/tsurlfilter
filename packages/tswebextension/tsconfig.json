{
    "extends": "./tsconfig.base.json",
    "include": [
        "src",
        "rollup.config.ts",
        "tasks",
        ".eslintrc.cjs",
        "src/lib/mv3/.eslintrc.js",
        "vitest.config.ts",
        "vitest.setup.ts",
        "tasks/constants.ts",
        "test",
        "tools",
    ],
    "exclude": [
        "test/smoke",
    ],
    "compilerOptions": {
        // With this tsconfig, we don't need to emit any files,
        // we just want to check the types
        "noEmit": true,
        "baseUrl": ".",
        "paths": {
            "*": ["src/*"]
        }
    },
}
