{
    "include": [
        "src",
        ".eslintrc.cjs",
        "rollup.config.js"
    ],
    "compilerOptions": {
        "target": "ESNext",
        "module": "NodeNext",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "moduleResolution": "NodeNext"
    }
}
