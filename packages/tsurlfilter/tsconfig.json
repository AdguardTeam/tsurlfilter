{
    "extends": "./tsconfig.base.json",
    "compilerOptions": {
        // With this tsconfig, we don't need to emit any files,
        // we just want to check the types
        "noEmit": true,
    },
    "include": [
        "src/**/*.ts",
        "cli/**/*.ts",
        "test/**/*.ts",
        "test/.eslintrc.cjs",
        ".eslintrc.cjs",
        "rollup.config.ts",
        "vitest.config.ts",
        "tasks/**/*.ts",
        "types/vitest-custom.d.ts"
    ],
    "exclude": [
        "test/builders/rollup-ts/**/*.ts",
    ]
}
