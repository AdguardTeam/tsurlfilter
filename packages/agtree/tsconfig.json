{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "node",
        "types": [
            "node",
            "jest"
        ],
        "resolveJsonModule": true,
        "allowJs": true,
        "declaration": true,
        "outDir": "./dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "incremental": true,
        "isolatedModules": true,
        "rootDir": "./"
    },
    "include": [
        "./src",
        "./browser-benchmark",
        "./scripts"
    ],
    "exclude": [
        "./node_modules",
        "./dist",
        "./test/smoke/typescript"
    ],
    "ts-node": {
        "swc": true,
        "experimentalSpecifierResolution": "node",
        "compilerOptions": {
            "module": "ESNext"
        }
    }
}
