{
  "name": "@adguard/api",
  "version": "1.2.2",
  "description": "This is a TypeScript library that implements AdGuard's extension API",
  "main": "dist/adguard-api.js",
  "typings": "dist/types/background/index.d.ts",
  "exports": {
    ".": "./dist/adguard-api.js",
    "./content-script": "./dist/adguard-content.js"
  },
  "typesVersions": {
    "*": {
      "content-script": [
        "dist/types/content-script/index.d.ts"
      ]
    }
  },
  "scripts": {
    "lint": "eslint 'src/**/*.ts' && yarn check-types",
    "build": "cross-env MODE='production' webpack",
    "postbuild": "yarn types && node tasks/build-txt",
    "prepush": "yarn build",
    "types": "tsc --project tsconfig.build.json --declaration --emitDeclarationOnly --outdir dist/types",
    "check-types": "tsc --project tsconfig.build.json --noemit",
    "increment": "yarn version --patch --no-git-tag-version"
  },
  "author": "Adguard",
  "license": "GPL-3.0-only",
  "dependencies": {
    "@adguard/assistant": "^4.3.63",
    "@adguard/filters-downloader": "^1.1.14",
    "@adguard/tswebextension": "^0.0.x",
    "url": "^0.11.0",
    "webextension-polyfill": "0.10.0",
    "zod": "3.19.1"
  },
  "devDependencies": {
    "@babel/core": "7.16.0",
    "@babel/preset-env": "^7.19.4",
    "@babel/preset-typescript": "^7.18.6",
    "@types/webextension-polyfill": "0.9.1",
    "@typescript-eslint/eslint-plugin": "^5.41.0",
    "@typescript-eslint/parser": "5.40.1",
    "babel-loader": "^8.2.5",
    "clean-webpack-plugin": "^4.0.0",
    "core-js": "^3.26.0",
    "cross-env": "^7.0.3",
    "eslint": "8.25.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-airbnb-typescript": "17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsdoc": "^39.3.14",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-webpack-plugin": "^3.2.0",
    "prettier": "^2.7.1",
    "typescript": "^4.8.4",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0"
  }
}
