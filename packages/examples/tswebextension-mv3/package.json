{
    "name": "tswebextension-mv3",
    "version": "0.1.0",
    "description": "Sample extension with tswebextension on manifest V3",
    "author": "Adguard Software Ltd.",
    "license": "GPL-3.0",
    "type": "module",
    "scripts": {
        "build": "pnpm build:precompile-rules && pnpm build:extension",
        "build:extension": "tsx ./scripts/build",
        "build:precompile-rules": "tsx ./scripts/precompile-rules.ts",
        "lint": "eslint --cache --ignore-path .gitignore . && tsc --noEmit",
        "tswebextension": "tswebextension",
        "test": "rimraf tmp && cross-env PW_EXPERIMENTAL_SERVICE_WORKER_NETWORK_EVENTS=1 tsx ./scripts/browser-test/index.ts",
        "clean": "rimraf build && rimraf extension/filters"
    },
    "dependencies": {
        "@adguard/logger": "workspace:^",
        "@adguard/tswebextension": "workspace:^",
        "react": "catalog:",
        "react-dom": "catalog:",
        "webextension-polyfill": "catalog:"
    },
    "devDependencies": {
        "@adguard/tsurlfilter": "workspace:^",
        "@swc-node/register": "catalog:",
        "@swc/core": "catalog:",
        "@types/chrome": "catalog:",
        "@types/fs-extra": "catalog:",
        "@types/react": "catalog:",
        "@types/react-dom": "catalog:",
        "@types/webextension-polyfill": "catalog:",
        "@typescript-eslint/eslint-plugin": "catalog:",
        "@typescript-eslint/parser": "catalog:",
        "axios": "catalog:",
        "chalk": "catalog:",
        "clean-webpack-plugin": "catalog:",
        "copy-webpack-plugin": "catalog:",
        "cross-env": "catalog:",
        "css-loader": "catalog:",
        "eslint": "catalog:",
        "eslint-config-airbnb-typescript": "catalog:",
        "eslint-plugin-import": "catalog:",
        "eslint-plugin-react": "^7.29.4",
        "fs-extra": "catalog:",
        "html-webpack-plugin": "catalog:",
        "playwright": "catalog:",
        "rimraf": "catalog:",
        "style-loader": "catalog:",
        "swc-loader": "catalog:",
        "tsx": "catalog:",
        "typescript": "catalog:",
        "webpack": "catalog:"
    }
}
