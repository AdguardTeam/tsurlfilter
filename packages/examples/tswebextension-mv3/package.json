{
    "name": "tswebextension-mv3",
    "version": "0.1.0",
    "description": "Sample extension with tswebextension on manifest V3",
    "author": "Adguard Software Ltd.",
    "license": "GPL-3.0",
    "type": "module",
    "scripts": {
        "build": "pnpm build:precompile-rules && pnpm build:extension",
        "build:extension": "tsx ./scripts/build",
        "build:precompile-rules": "tsx ./scripts/precompile-rules.ts",
        "lint": "pnpm lint:code && pnpm lint:types",
        "lint:code": "eslint --cache --ignore-path .gitignore .",
        "lint:types": "tsc --noEmit",
        "tswebextension": "tswebextension",
        "test": "rimraf tmp && cross-env PW_EXPERIMENTAL_SERVICE_WORKER_NETWORK_EVENTS=1 tsx ./scripts/browser-test/index.ts",
        "clean": "rimraf build && rimraf extension/filters"
    },
    "dependencies": {
        "@adguard/logger": "workspace:^",
        "@adguard/tswebextension": "workspace:^",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "webextension-polyfill": "^0.12.0"
    },
    "devDependencies": {
        "@adguard/tsurlfilter": "workspace:^",
        "@swc-node/register": "^1.6.6",
        "@swc/core": "^1.3.76",
        "@types/chrome": "^0.0.305",
        "@types/fs-extra": "^11.0.1",
        "@types/react": "^17.0.80",
        "@types/react-dom": "^17.0.25",
        "@types/webextension-polyfill": "^0.12.0",
        "@typescript-eslint/eslint-plugin": "^7.5.0",
        "@typescript-eslint/parser": "^7.5.0",
        "axios": "^0.26.0",
        "chalk": "4.1.2",
        "clean-webpack-plugin": "^4.0.0",
        "copy-webpack-plugin": "^10.0.0",
        "cross-env": "^7.0.3",
        "css-loader": "^6.7.1",
        "eslint": "8.57.1",
        "eslint-config-airbnb-typescript": "^18.0.0",
        "eslint-plugin-import": "^2.28.0",
        "eslint-plugin-react": "^7.29.4",
        "fs-extra": "^10.1.0",
        "html-webpack-plugin": "^5.5.0",
        "playwright": "^1.27.1",
        "rimraf": "^6.0.1",
        "style-loader": "^3.3.1",
        "swc-loader": "^0.2.3",
        "tsx": "^4.19.2",
        "typescript": "5.4.3",
        "webpack": "^5.64.2"
    }
}
