{
    "extends": "./tsconfig.base.json",
    "compilerOptions": {
        // With this tsconfig, we don't need to emit any files,
        // we just want to check the types
        "noEmit": true,
        "baseUrl": ".",
    },
    "include": [
        "src/**/*.ts",
        "tasks/**/*.ts",
        "e2e/**/*.ts",
        "e2e/.eslintrc.js",
        "constants.ts",
        "rollup.config.ts",
        "vitest.config.ts",
        "vitest.setup.ts",
        ".eslintrc.js"
    ],
}
