{
    "compilerOptions": {
        "moduleResolution": "bundler",
        "target": "esnext",
        "module": "esnext",
        "lib": [
            "esnext",
            "dom",
        ],
        "strict": true,
        "noUncheckedIndexedAccess": true,
        "allowJs": true,
        "experimentalDecorators": true,
        "resolveJsonModule": true,
        "esModuleInterop": true, // This will set allowSyntheticDefaultImports to true
    },
}
