{
    "extends": "./tsconfig.base.json",
    "compilerOptions": {
        // With this tsconfig, we don't need to emit any files,
        // we just want to check the types
        "noEmit": true,
    },
    "include": [
        ".eslintrc.js",
        "jest.config.ts",
        "jest.config.ts",
        "rollup.config.ts",
        "scripts/**/*.ts",
        "src/**/*.ts",
        "test/**/*.ts",
        "test/.eslintrc.js",
    ],
    "exclude": [
        "./test/smoke",
    ],
}
