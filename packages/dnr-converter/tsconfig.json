{
    "extends": "./tsconfig.base.json",
    "compilerOptions": {
        // With this tsconfig, we don't need to emit any files,
        // we just want to check the types
        "noEmit": true
    },
    "include": [
        "src/**/*.ts",
        "test/**/*.ts",
        "tasks/**/*.ts",
        "**/.eslintrc.cjs",
        "rollup.config.ts",
        "vitest.config.ts"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "test/smoke/esm",
        "test/smoke/exports"
    ]
}
