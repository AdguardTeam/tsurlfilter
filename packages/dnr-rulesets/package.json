{
    "name": "@adguard/dnr-rulesets",
    "version": "1.2.20250508030134",
    "description": "Utility to create AdGuard DNR rulesets for mv3 extensions",
    "files": [
        "dist/**/*"
    ],
    "bin": {
        "dnr-rulesets": "dist/cli.js"
    },
    "main": "dist/lib/index.js",
    "types": "dist/lib/index.d.ts",
    "scripts": {
        "build": "pnpm run clear && pnpm run build:assets && pnpm run build:lib && pnpm run build:cli",
        "build:assets": "node -r @swc-node/register tasks/build.ts",
        "build:docs": "node -r @swc-node/register tasks/update-readme.ts",
        "build:cli": "tsc --project tsconfig.cli.json",
        "build:lib": "tsc --project tsconfig.lib.json",
        "clear": "rimraf ./dist",
        "test": "jest --coverage",
        "lint": "pnpm lint:code && pnpm lint:types",
        "lint:code": "eslint",
        "lint:types": "tsc --noEmit",
        "increment": "pnpm version patch --no-git-tag-version",
        "increment:auto-deploy": "node -r @swc-node/register tasks/auto-deploy-increment"
    },
    "author": "Adguard Software Ltd.",
    "license": "GPL-3.0-only",
    "dependencies": {
        "@adguard/logger": "workspace:^",
        "commander": "^12.1.0",
        "fast-glob": "^3.3.2",
        "zod": "^3.23.8"
    },
    "devDependencies": {
        "@adguard/tsurlfilter": "workspace:^",
        "@eslint/js": "^9.8.0",
        "@stylistic/eslint-plugin": "^2.6.1",
        "@swc-node/register": "^1.6.6",
        "@swc/core": "^1.5.25",
        "@swc/jest": "^0.2.36",
        "@types/fs-extra": "^11.0.4",
        "@types/jest": "^29.5.12",
        "@types/node": "^20.14.2",
        "axios": "^1.7.2",
        "eslint": "^9.8.0",
        "eslint-plugin-jsdoc": "^48.11.0",
        "eslint-plugin-simple-import-sort": "^12.1.1",
        "fs-extra": "^11.2.0",
        "jest": "^29.7.0",
        "rimraf": "^5.0.7",
        "typescript": "^5.4.5",
        "typescript-eslint": "^8.0.1"
    }
}