{
  "name": "@adguard/dnr-rulesets",
  "version": "0.0.1",
  "description": "Utility to create AdGuard DNR rulesets for mv3 extensions",
  "files": [
    "dist/**/*"
  ],
  "bin": {
    "dnr-rulesets": "dist/cli.js"
  },
  "scripts": {
    "build": "pnpm run clear && pnpm run build:assets && pnpm run build:cli",
    "build:assets": "node -r @swc-node/register build.ts",
    "build:cli": "tsc --project tsconfig.build.json",
    "clear": "rimraf ./dist"
  },
  "author": "Adguard Software Ltd.",
  "license": "GPL-3.0-only",
  "dependencies": {
    "@adguard/logger": "^1.0.1",
    "commander": "^12.1.0"
  },
  "devDependencies": {
    "@adguard/tsurlfilter": "workspace:^",
    "@adguard/tswebextension": "workspace:^",
    "@swc-node/register": "^1.6.6",
    "@swc/core": "^1.5.25",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.14.2",
    "axios": "^1.7.2",
    "fs-extra": "^11.2.0",
    "rimraf": "^5.0.7",
    "typescript": "^5.4.5"
  }
}