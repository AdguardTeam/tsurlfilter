{
    "$schema": "https://json.schemastore.org/tsconfig",
    "extends": "./tsconfig.base.json",
    "compilerOptions": {
        // With this tsconfig, we don't need to emit any files,
        // we just want to check the types
        "noEmit": true,
    },
    "include": [
        "./src",
        "./test",
        ".eslint.config.mjs",
        "rollup.config.ts",
        "vitest.config.ts",
        "./tasks",
    ],
    "exclude": [
        "node_modules",
        "dist",
        "test/smoke/esm",
        "test/smoke/exports"
    ]
}
